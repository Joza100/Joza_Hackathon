<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/create_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/create_text_title"
            android:textSize="45sp"
            android:textStyle="bold"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/create_text"
            app:layout_constraintBottom_toTopOf="@id/create_button">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_screen_option_height">
                    <TextView
                        android:layout_width="@dimen/create_screen_text_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/create_cocktail_name"
                        android:textSize="@dimen/create_screen_text_size"
                        android:gravity="center|start"/>
                    <EditText
                        android:id="@+id/cocktail_name_edit"
                        android:layout_width="@dimen/create_screen_edit_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="text"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_screen_option_height">
                    <TextView
                        android:layout_width="@dimen/create_screen_text_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/create_cocktail_instructions"
                        android:textSize="@dimen/create_screen_text_size"
                        android:gravity="center|start"/>
                    <EditText
                        android:id="@+id/cocktail_instructions_edit"
                        android:layout_width="@dimen/create_screen_edit_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="text"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_screen_option_height">
                    <TextView
                        android:layout_width="@dimen/create_screen_text_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Category:"
                        android:textSize="@dimen/create_screen_text_size"
                        android:gravity="center|start"/>
                    <EditText
                        android:id="@+id/cocktail_category_edit"
                        android:layout_width="@dimen/create_screen_edit_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="text"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_screen_option_height">
                    <TextView
                        android:layout_width="@dimen/create_screen_text_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Alcoholic:"
                        android:textSize="@dimen/create_screen_text_size"
                        android:gravity="center|start"/>
                    <EditText
                        android:id="@+id/cocktail_alcoholic_edit"
                        android:layout_width="@dimen/create_screen_edit_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="text"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_screen_option_height">
                    <TextView
                        android:layout_width="@dimen/create_screen_text_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Glass:"
                        android:textSize="@dimen/create_screen_text_size"
                        android:gravity="center|start"/>
                    <EditText
                        android:id="@+id/cocktail_glass_edit"
                        android:layout_width="@dimen/create_screen_edit_width"
                        android:layout_height="@dimen/create_screen_option_height"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="text"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.josip.hackathon.IngredientInputView
                    android:id="@+id/ingredient_input_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintRight_toRightOf="@id/cancel_button"
            android:text="Create"
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/create_button"
            android:layout_marginStart="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Cancel"
            android:layout_marginBottom="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>